<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cxf="http://cxf.apache.org/core"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
                http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <bean id="readerRestServiceImpl" class="com.reader.impl.ReaderRestServiceImpl"/>

    <jaxrs:server id="readerServer" address="/">
        <jaxrs:serviceBeans>
            <ref bean="readerRestServiceImpl"/>
        </jaxrs:serviceBeans>

        <jaxrs:inInterceptors>
            <bean class="com.reader.core.AuthInterceptor"/>
        </jaxrs:inInterceptors>

        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
            <bean class="com.reader.core.ObjectMapperResolver"/>
        </jaxrs:providers>
    </jaxrs:server>
</beans>